    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "chart.js": "^4.4.8",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron": "^34.3.0",
    "next": "^15.2.1",
    "papaparse": "^5.5.2",
    "postcss": "^8.5.3",
    "postgres": "^3.4.5",
